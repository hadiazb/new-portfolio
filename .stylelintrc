{
  "processors": [
    "stylelint-processor-styled-components"
  ],
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-styled-components",
    "stylelint-prettier/recommended",
	  "stylelint-config-prettier"
  ],
  "rules": {
    "prettier/prettier": [
      true,
      {
        "parser": "css",
        "tabWidth": 2,
        "printWidth": 100,
        "singleQuote": true,
        "endOfLine": "auto"
      }
    ],
    "block-no-empty": null,
    "no-descending-specificity": null
  },
  "ignoreFiles": [
    "**/build/**",
    "**/dist/**",
    "**/public/**",
    "**/node_modules/**",
    "**/src/utils/**"
  ]
}